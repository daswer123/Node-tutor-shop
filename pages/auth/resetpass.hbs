<div class="row">
<div id="login" class="col s6 offset-s3">
        <h1>Create new password</h1>
        {{#if logErr}}
            <p class="alert">{{logErr}}</p>
        {{/if}}
        <form action="/auth/resetpass" method="POST">

          <div class="input-field">
                <input name="password" id="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Type your password"></span>
          </div>
          
          <button type="submit" class="btn btn-primary">Reset your pass</button>

          <input type="hidden" name="userId" value="{{userId}}">
          <input name="_csrf" type="hidden" value="{{csrf}}">
      </form>
    </div>
</div>